<!DOCTYPE html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Julie er superkul" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Rails Bootstrap" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
</head>
<body>

	<h1> Register </h1>

<% @page_title = "UserAuth | Signup" %>


<%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>

	<div class="row">

		<div class="col-lg-3 col-md-3">
		</div>

		<div class="col-lg-3 col-md-3">

		<p> Username: </br> <%= f.text_field :username %> </p>
		<p> First name: </br> <%= f.text_field :firstname %> </p>
		<p>Last name: </br> <%= f.text_field :lastname %> </p>
		<p>Email: </br> <%= f.text_field :email %> </p>

		</div>
	
		<div class="col-lg-3 col-md-3">
			<p> Gender: </br> <%= f.text_field :gender %> </p>
			<p> Password: </br> <%= f.password_field :password %> </p>
			<p> Password confirmation: </br> <%= f.password_field :password_confirmation %> </p>
			<%= f.submit :Signup %>

		</div>
		<div class="col-lg-3 col-md-3">
		</div>

	</div>


	<% end %>

	<% if @user.errors.any? %>

	<ul class="Signup_Errors" >
		<% for message_error in @user.errors.full_messages %>
		<li>* <%= message_error %> </li>
		<% end %>
	</ul>

	<% end %>

</body>
<html>